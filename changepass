<%@page contentType="text/html" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html lang="en">
    
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lap Trinh Web</title>
    
    <link rel="stylesheet" href="./assets/css/style.css">
</head>

    <body>
        <h1> Change password form </h1><!-- comment -->
        <h3 style="color: red"> ${requestScope.ms} </h3>
        <form action="change">
            Old password:<input type="password" name="opass"/><br/><!-- comment -->
            <input type="hidden" name="user" value="${sessionScope.account.username}"/>
            New password:<input type="password" name="pass"/><br/><!-- comment -->
            Confirm password:<input type="password" name="rpass"/><br/><!-- comment -->
            <input type="submit" value="CHANGE"/>
        </form>
    </body>
</html>


